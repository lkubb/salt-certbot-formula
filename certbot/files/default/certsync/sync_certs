#!/bin/sh

changed=0
rsync_out=$(rsync -aiz -e "ssh -i '{{ certbot.lookup.sync_certs_ssh_keyfile }}'" certsync@{{ certbot.sync_certs.from }}:* {{ certbot.sync_certs.to }}/)

if [ $? -eq 0 ]; then
    if [ -n "${rsync_out}" ]; then
        changed=1
    fi
else
    exit 1
fi

if [ $changed -eq 1 ]; then
{%- if "semanage" | which %}
    restorecon -R '{{ certbot.sync_certs.to }}'
{%- endif %}
{%- if "nginx" | which %}
    systemctl reload nginx
{%- endif %}
{%- if "lighttpd" | which %}
    systemctl reload lighttpd
{%- endif %}
fi
